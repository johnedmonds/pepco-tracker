<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="TestHibernate">
  <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
  <property name="hibernate.connection.url">jdbc:hsqldb:mem:test</property>
  <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
  <property name="current_session_context_class">thread</property>
  <property name="hibernate.hbm2ddl.auto">create-drop</property>
  <mapping class="com.pocketcookies.pepco.model.AbstractOutage" resource="mappings/AbstractOutage.hbm.xml"/>
  <mapping class="com.pocketcookies.pepco.model.Outage" resource="mappings/Outage.hbm.xml"/>
  <mapping class="com.pocketcookies.pepco.model.OutageCluster" resource="mappings/OutageCluster.hbm.xml"/>
  <mapping class="com.pocketcookies.pepco.model.OutageClusteRevision" resource="mappings/OutageClusterRevision.hbm.xml"/>
  <mapping class="com.pocketcookies.pepco.model.OutageRevision" resource="mappings/OutageRevision.hbm.xml"/>
  <mapping class="com.pocketcookies.pepco.model.AbstractOutageRevision" resource="mappings/AbstractOutageRevision.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
